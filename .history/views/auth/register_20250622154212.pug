extends ../layout

block content
    h1= title
    
    if message
        .alert.alert-danger= message

    form(method='POST' action='/auth/register')
        .form-group
            label(for='name') Full Name
            input.form-control(type='text' name='name' id='name' required)
        .form-group
            label(for='email') Email
            input.form-control(type='email' name='email' id='email' required)
        .form-group
            label(for='password') Password
            input.form-control(type='password' name='password' id='password' required)
        .form-group
            label(for='confirmPassword') Confirm Password
            input.form-control(type='password' name='confirmPassword' id='confirmPassword' required)
        .form-group
            button.btn.btn-primary(type='submit') Register

    p Already have an account? 
    a(href='/auth/login') Login here
