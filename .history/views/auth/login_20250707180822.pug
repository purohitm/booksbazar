extends ../layout

block content
    div.container
        div.row.justify-content-center.min-vh-100.align-items-center
            div.col-12.col-md-8.col-lg-6
                div.card.shadow-sm
                    div.card-body.p-4
                        h1.text-center.mb-4 Login to BooksBazar
                        
                        if messages.error.length > 0
                            each message in messages.error
                                div.alert.alert-danger.alert-dismissible.fade.show(role='alert')
                                    = message
                                    button.btn-close(type='button' data-bs-dismiss='alert' aria-label='Close')

                        form(method='POST' action='/auth/login' class='needs-validation' novalidate)
                            .mb-4
                                label.form-label(for='email') Email Address
                                input.form-control.form-control-lg(type='email' name='email' id='email' required)
                                div.invalid-feedback Please enter your email address
                            
                            .mb-4
                                label.form-label(for='password') Password
                                input.form-control.form-control-lg(type='password' name='password' id='password' required)
                                div.invalid-feedback Please enter your password
                            
                            .mb-4
                                button.btn.btn-primary.w-100(type='submit') Login
                            
                            .text-center
                                p.mb-2 Don't have an account?
                                a.text-primary(href='/auth/register' style='text-decoration: none;') Register here
                                a.text-primary(href='/auth/forgot-password' style='text-decoration: none;') Forgot password?

    style.
        .login-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .login-card {
            max-width: 500px;
            width: 100%;
            margin: 0 auto;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            border-radius: 1rem;
        }
        
        .card-body {
            padding: 2rem;
        }
        
        .form-label {
            font-weight: 600;
            margin-bottom: 0.5rem;
        }
        
        .form-control {
            height: 50px;
            font-size: 1rem;
            padding: 0.75rem 1rem;
        }
        
        .btn-primary {
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            letter-spacing: 0.5px;
        }
        
        @media (max-width: 768px) {
            .login-card {
                margin: 1rem;
            }
            
            .card-body {
                padding: 1.5rem;
            }
        }
