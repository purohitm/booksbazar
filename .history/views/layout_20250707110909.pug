doctype html
html
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        title= title
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css')
        link(href='https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap' rel='stylesheet')
        link(rel='stylesheet' href='/css/style.css')
        block extraStyles
    body
        nav.navbar.navbar-expand-lg.navbar-light.fixed-top
            div.container-fluid
                a.navbar-brand(href='/') BooksBazar
                button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                div.collapse.navbar-collapse#navbarNav
                    ul.navbar-nav.me-auto
                        li.nav-item
                            a.nav-link(href='/books') Books
                        li.nav-item
                            a.nav-link(href='/categories') Categories
                        li.nav-item
                            a.nav-link(href='/about') About
                    ul.navbar-nav.ms-auto
                        if user
                            li.nav-item
                                a.nav-link(href='/profile')
                                    i.fas.fa-user.me-1
                                    |  #{user.username}
                            li.nav-item
                                form(method='POST' action='/auth/logout' class='d-inline')
                                    button.btn.btn-link.nav-link(type='submit')
                                        i.fas.fa-sign-out-alt.me-1
                                        |  Logout
                        else
                            li.nav-item
                                a.nav-link(href='/auth/login') Login
                            li.nav-item
                                a.nav-link(href='/auth/register') Register

        main.container.mt-5
            if messages.error.length > 0
                each message in messages.error
                    div.alert.alert-danger #{message}
            if messages.success.length > 0
                each message in messages.success
                    div.alert.alert-success #{message}

            block content

        footer.footer
            div.container
                div.row
                    div.col-md-4
                        h5 About BooksBazar
                        p Your premier online bookstore for quality books at great prices.
                    div.col-md-4
                        h5 Quick Links
                        ul.list-unstyled
                            li
                                a.text-light(href='/books') Books
                            li
                                a.text-light(href='/categories') Categories
                            li
                                a.text-light(href='/about') About Us
                            li
                                a.text-light(href='/contact') Contact
                    div.col-md-4
                        h5 Contact Us
                        ul.list-unstyled
                            li
                                i.fas.fa-envelope.me-2
                                |  contact@booksbazar.com
                            li
                                i.fas.fa-phone.me-2
                                |  +1 234 567 890
                            li
                                i.fas.fa-location-dot.me-2
                                |  123 Book Street, Reading City
                div.row.mt-4
                    div.col-12.text-center
                        p.text-light.mb-0 &copy; 2025 BooksBazar. All rights reserved.

        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
        script(src='/js/main.js')
