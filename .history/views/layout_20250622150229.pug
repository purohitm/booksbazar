doctype html
html
    head
        title= title
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css')
        link(rel='stylesheet' href='/css/style.css')
    body
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
            div.container
                a.navbar-brand(href='/') BooksBazar
                button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav')
                    span.navbar-toggler-icon
                div.collapse.navbar-collapse#navbarNav
                    ul.navbar-nav
                        li.nav-item
                            a.nav-link(href='/books') Browse Books
                        li.nav-item
                            a.nav-link(href='/books/sell') Sell a Book
                        if user
                            li.nav-item
                                a.nav-link(href='/profile') Profile
                            li.nav-item
                                a.nav-link(href='/auth/logout') Logout
                        else
                            li.nav-item
                                a.nav-link(href='/auth/login') Login
                            li.nav-item
                                a.nav-link(href='/auth/register') Register

        main.container
            block content

        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')
