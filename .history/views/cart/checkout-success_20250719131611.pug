extends ../layout

block content
    .container.mt-5.mb-5
        .card.shadow.p-4.text-center
            h2.text-success.mb-3
                i.fas.fa-check-circle.me-2
                | Payment Successful!
            p.text-muted.mb-4 Your order has been placed and payment was completed.
            h4.mb-3 Order Summary
            if order && order.items && order.items.length > 0
                ul.list-group.list-group-flush.mb-3
                    each item in order.items
                        li.list-group-item.d-flex.justify-content-between.align-items-center
                            span #{item.book.title} × #{item.quantity}
                            span ₹#{item.price * item.quantity}
                li.list-group-item.d-flex.justify-content-between.align-items-center.fw-bold
                    span Total
                    span ₹#{order.total}
            else
                p.text-danger No order items found.
            h5.mt-4.mb-2 Shipping Details
            p.mb-1 #{order.address}
            p.mb-1 Phone: #{order.phone}
            h5.mt-4.mb-2 Payment Details
            p.mb-1 Method: #{order.paymentMethod}
            p.mb-1 Status: #{order.paymentStatus || 'Completed'}
            a.btn.btn-primary.mt-4(href='/books') Continue Shopping
