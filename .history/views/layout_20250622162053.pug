doctype html
html
    head
        title= title
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css')
        link(rel='stylesheet' href='/css/style.css')
    body
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
            div.container
                a.navbar-brand(href='/') BooksBazar
                button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                div.collapse.navbar-collapse#navbarNav
                    ul.navbar-nav.me-auto
                        li.nav-item
                            a.nav-link(href='/books') Books
                        if user
                            li.nav-item
                                a.nav-link(href='/books/sell') Sell Book
                    ul.navbar-nav.ms-auto
                        if user
                            li.nav-item
                                a.nav-link(href='/logout') Logout (#{user.name})
                        else
                            li.nav-item
                                a.nav-link(href='/auth/login') Login
                            li.nav-item
                                a.nav-link(href='/auth/register') Register

        main.container
            if messages.error.length > 0
                each message in messages.error
                    div.alert.alert-danger #{message}
            if messages.success.length > 0
                each message in messages.success
                    div.alert.alert-success #{message}

            block content

        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')
